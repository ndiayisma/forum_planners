{% extends 'base.html.twig' %}

{% block title %}Stand{% endblock %}

{% block body %}
    <h1>Stand</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stand.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ stand.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ stand.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stand.description }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ stand.capacity }}</td>
            </tr>
            <tr>
                <th>Global Note</th>
                <td>{{ stand.averageRating }}</td>
            <tr>
                <th>Duration</th>
                <td>{{ stand.duration ? stand.duration|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stand_index') }}">back to list</a>

    <a href="{{ path('app_stand_edit', {'id': stand.id}) }}">edit</a>

    {{ include('stand/_delete_form.html.twig') }}

    {{ form_start(form) }}
    {{ form_row(form.note) }}
    {{ form_row(form.comment) }}
    <button class="btn">Soumettre</button>
    {{ form_end(form) }}
{% endblock %}
